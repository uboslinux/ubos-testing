developer=http://indiecomputing.com/
url=${developer}
maintainer=${developer}
pkgname=$(basename $(pwd))
pkgver=2023.11.12.00.31.00
# Change this pkgver manually to this value: date -u +%Y.%m.%d.%H.%M.%S
# We cannot automatically generate this here, because macrobuild reads this variable, and then
# makepkg does, and the timestamp may not match, breaking the build
pkgrel=1
pkgdesc="Test package that always needs to be rebuilt"
arch=('any')
license=("AGPL3")
depends=()

package() {
    mkdir -p ${pkgdir}/usr/share/${pkgname}
    echo "Package ${pkgname}, version: ${pkgver}-${pkgrel}" > ${pkgdir}/usr/share/${pkgname}/VERSION
}
